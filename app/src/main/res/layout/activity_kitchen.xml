<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/kitchen">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/calenderview"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            app:srcCompat="@drawable/calendar" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="30dp"
            android:text="26"
            android:fontFamily="@font/pfstardust"
            android:textColor="@android:color/black"
            android:textSize="30dp"
            android:textStyle="bold"
            />

        <ImageView
            android:id="@+id/imageView15"
            android:layout_width="263dp"
            android:layout_height="43dp"
            android:layout_gravity="center"
            android:background="@drawable/bar5"
            android:orientation="vertical"></ImageView>

        <ImageView
            android:id="@+id/help"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="right"
            android:clickable="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="60dp"
            app:srcCompat="@drawable/kitchen_tutorial" />

        <ImageView
            android:id="@+id/setting"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:clickable="true"
            app:srcCompat="@drawable/setting" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="100dp">

            <Button
                android:id="@+id/iceCup"
                android:layout_width="46dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="20dp"
                android:background="#00FFFFFF" />

            <Button
                android:id="@+id/hotCup"
                android:layout_width="46dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@id/iceCup"
                android:background="#00FFFFFF" />

            <Button
                android:id="@+id/iceWater"
                android:layout_width="45dp"
                android:layout_height="38dp"
                android:layout_marginBottom="5dp"
                android:layout_toRightOf="@+id/hotWater"
                android:background="#00FFFFFF" />

            <Button
                android:id="@+id/hotWater"
                android:layout_width="40dp"
                android:layout_height="38dp"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/hotCup"
                android:background="#00FFFFFF" />

            <Button
                android:id="@+id/hotMilk"
                android:layout_width="45dp"
                android:layout_height="38dp"
                android:layout_marginLeft="23dp"
                android:layout_toRightOf="@+id/iceWater"
                android:background="#00FFFFFF" />

            <Button
                android:id="@+id/iceMilk"
                android:layout_width="40dp"
                android:layout_height="38dp"
                android:layout_toRightOf="@+id/hotMilk"
                android:background="#00FFFFFF" />


        </RelativeLayout>

        <TableLayout
            android:layout_width="185dp"
            android:layout_height="170dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="40dp">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/ice_icon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ice_icon" />

                <ImageView
                    android:id="@+id/coffee_icon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/coffee_icon" />

                <ImageView
                    android:id="@+id/vanil_icon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/vanil_icon" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp">

                <ImageView
                    android:id="@+id/choco_icon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/choco_icon" />

                <ImageView
                    android:id="@+id/straw_icon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/straw_icon" />

                <ImageView
                    android:id="@+id/banana_icon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/banana_icon" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp">

                <ImageView
                    android:id="@+id/mash_icon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/mash_off" />

                <ImageView
                    android:id="@+id/toff_icon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/toff_off" />

                <ImageView
                    android:id="@+id/mouse_icon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/mouse_off" />
            </TableRow>

        </TableLayout>

        <Button
            android:id="@+id/blender"
            android:layout_width="60dp"
            android:layout_height="28dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="170dp"
            android:background="#00FFFFFF" />
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="26dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/bil1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pfstardust"
            android:textAlignment="center"
            android:textSize="10dp"
            android:textStyle="bold"
            android:text="TextView" />

        <TextView
            android:id="@+id/bil3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pfstardust"
            android:textAlignment="center"
            android:textSize="10dp"
            android:textStyle="bold"
            android:layout_marginTop="75dp"
            android:text="TextView" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/bil2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pfstardust"
            android:textAlignment="center"
            android:textSize="10dp"
            android:textStyle="bold"
            android:text="TextView" />

        <TextView
            android:id="@+id/bil4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginTop="75dp"
            android:textSize="10dp"
            android:textStyle="bold"
            android:fontFamily="@font/pfstardust"
            android:text="TextView" />

    </LinearLayout>

    <Button
        android:id="@+id/trash"
        android:layout_width="130dp"
        android:layout_height="29dp"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="40dp"
        android:layout_gravity="bottom"
        android:background="#00FFFFFF"/>

</FrameLayout>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/recipeBook"
            android:layout_width="99dp"
            android:layout_height="69dp"
            android:background="#00FFFFFF" />

        <LinearLayout
            android:layout_width="530dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="30dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/selectCup"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginLeft="150dp" />

            <ImageView
                android:id="@+id/selectWM"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"/>

            <ImageView
                android:id="@+id/selectIng"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp" />

            <ImageView
                android:id="@+id/selectBlen"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
 />
        </LinearLayout>

        <Button
            android:id="@+id/btnMake"
            android:layout_width="140dp"
            android:layout_height="60dp"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="40dp"
            android:background="@drawable/complete" />

    </LinearLayout>

</LinearLayout>




