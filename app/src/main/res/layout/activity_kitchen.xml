<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/kitchen">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="180dp">

            <Button
                android:id="@+id/iceCup"
                android:layout_width="46dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="20dp"
                android:background="#00FFFFFF" />

            <Button
                android:id="@+id/hotCup"
                android:layout_width="46dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@id/iceCup"
                android:background="#00FFFFFF" />

            <Button
                android:id="@+id/iceWater"
                android:layout_width="45dp"
                android:layout_height="38dp"
                android:layout_marginBottom="5dp"
                android:layout_toRightOf="@+id/hotWater"
                android:background="#00FFFFFF" />

            <Button
                android:id="@+id/hotWater"
                android:layout_width="40dp"
                android:layout_height="38dp"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/hotCup"
                android:background="#00FFFFFF" />

            <Button
                android:id="@+id/hotMilk"
                android:layout_width="45dp"
                android:layout_height="38dp"
                android:layout_marginLeft="23dp"
                android:layout_toRightOf="@+id/iceWater"
                android:background="#00FFFFFF" />
            <Button
                android:id="@+id/iceMilk"
                android:layout_width="40dp"
                android:layout_height="38dp"
                android:layout_toRightOf="@+id/hotMilk"
                android:background="#00FFFFFF" />


        </RelativeLayout>

        <TableLayout
            android:layout_width="185dp"
            android:layout_height="170dp"
            android:layout_marginTop="120dp">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/ing0"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src ="@drawable/ing0"
                    />

                <ImageView
                    android:id="@+id/ing1"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="15dp"
                    android:src ="@drawable/ing1" />

                <ImageView
                    android:id="@+id/ing2"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="15dp"
                    android:src ="@drawable/ing2" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp">

                <ImageView
                    android:id="@+id/ing3"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src ="@drawable/ing3" />

                <ImageView
                    android:id="@+id/ing4"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="15dp"
                    android:src ="@drawable/ing4" />

                <ImageView
                    android:id="@+id/ing5"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="15dp"
                    android:src ="@drawable/ing5" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp">

                <ImageView
                    android:id="@+id/ing6"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src ="@drawable/ing6" />

                <ImageView
                    android:id="@+id/ing7"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="15dp"
                    android:src ="@drawable/ing7" />

                <ImageView
                    android:id="@+id/ing8"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="15dp"
                    android:src ="@drawable/ing8" />
            </TableRow>

        </TableLayout>

        <Button
            android:id="@+id/blender"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="bottom"
            android:background= "#00FFFFFF"
            android:layout_marginLeft="25dp" />

        <Button
            android:id="@+id/trash"
            android:layout_width="170dp"
            android:layout_height="40dp"
            android:layout_gravity="bottom"
            android:background= "#00FFFFFF"
            android:layout_marginLeft="25dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/recipeBook"
            android:layout_width="99dp"
            android:layout_height="69dp"
            android:background="#00FFFFFF" />

        <LinearLayout
            android:layout_width="530dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="30dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/selectCup"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginLeft="150dp" />

            <ImageView
                android:id="@+id/selectWM"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"/>

            <ImageView
                android:id="@+id/selectIng"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp" />

            <ImageView
                android:id="@+id/selectBlen"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
 />
        </LinearLayout>

        <Button
            android:id="@+id/btnMake"
            android:layout_width="140dp"
            android:layout_height="60dp"
            android:layout_marginTop="35dp"
            android:background="@drawable/complete" />

    </LinearLayout>

</LinearLayout>




