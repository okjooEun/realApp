<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:id="@+id/lin"
    android:background="@drawable/mainback">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/calenderview"
                android:layout_width="102dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                app:srcCompat="@drawable/calendar" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="31dp"
                android:layout_marginTop="35dp"
                android:text="26"
                android:fontFamily="@font/pfstardust"
                android:textColor="@android:color/black"
                android:textSize="30dp"
                android:textStyle="bold"
                />

            <ImageView
                android:id="@+id/setting"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="790dp"
                android:clickable="true"
                app:srcCompat="@drawable/setting" />

        </FrameLayout>

    </LinearLayout>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/guest"
                android:layout_width="match_parent"
                android:layout_height="196dp"/>

        </FrameLayout>

        <FrameLayout
            android:id="@+id/frame"
            android:layout_width="559dp"
            android:layout_height="140dp"
            android:layout_marginTop="170dp"
            android:layout_marginLeft="150dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/speech">

            <TextView
                android:id="@+id/guestname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:layout_marginLeft="45dp"
                android:textSize="20dp"
                android:fontFamily="@font/pfstardust"
                android:layout_marginTop="6dp" />

            <TextView
                android:id="@+id/txtTalk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="17dp"
                android:textColor="#000000"
                android:fontFamily="@font/pfstardust"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/txtTalk2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="17dp"
                android:fontFamily="@font/pfstardust"
                android:textSize="20dp"
                android:textColor="#000000"
                android:visibility="invisible" />

            <LinearLayout
                android:id="@+id/linBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="invisible">

                <ImageView
                    android:id="@+id/imageView16"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/selec_bar5" />

                <Button
                    android:id="@+id/btnSelect1"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="1dp"
                    android:background="@drawable/button"
                    android:fontFamily="@font/pfstardust"
                    android:text="Button"
                    android:textColor="#000000" />

                <Button
                    android:id="@+id/btnSelect2"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="1dp"
                    android:background="@drawable/button"
                    android:textColor="#000000"
                    android:fontFamily="@font/pfstardust"
                    android:text="Button" />

                <Button
                    android:id="@+id/btnSelect3"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="1dp"
                    android:background="@drawable/button"
                    android:fontFamily="@font/pfstardust"
                    android:textColor="#000000"
                    android:text="Button" />

            </LinearLayout>

            <Button
                android:id="@+id/goKitchen"
                android:layout_width="80dp"
                android:layout_height="32dp"
                android:layout_gravity="right|bottom"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/go_kitchen"
                android:fontFamily="@font/pfstardust"
                android:visibility="invisible"></Button>

        </FrameLayout>

    </FrameLayout>


</LinearLayout>